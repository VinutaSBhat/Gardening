<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@drawable/canva_bg_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="57dp"
        android:minHeight="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:fontFamily="@font/alice"
                android:padding="10dp"
                android:shadowColor="@color/green"
                android:shadowDx="12"
                android:shadowDy="12"
                android:text="Explore amazing gardening products!"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <androidx.cardview.widget.CardView

                android:layout_width="342dp"
                android:layout_height="219dp"

                android:layout_gravity="center"
                android:layout_marginStart="19dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">


                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="226dp"
                    app:iss_auto_cycle="true"
                    app:iss_corner_radius="20"
                    app:iss_delay="1000"
                    app:iss_period="1000"
                    app:iss_title_background="@drawable/gradient">

                </com.denzcoskun.imageslider.ImageSlider>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/adamina"
                    android:text="Choose a category"

                  android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp">

                </TextView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/gardeningtools"
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/canva_home"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="42dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/home_tool" />


                    <TextView

                        android:layout_width="265dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="50dp"
                        android:fontFamily="@font/alice"
                        android:text="Gardening Tools"
                        android:textColor="@color/black"
                        android:textSize="32dp"

                        >

                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/nurseryplants"
                app:cardElevation="20dp"
                app:cardCornerRadius="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/canva_home"
                    android:orientation="horizontal"

                    android:layout_gravity="center_horizontal">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="42dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/flower_pot" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:text="Nursery Plants"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:fontFamily="@font/alice"
                        android:textSize="33dp"
                        android:layout_marginTop="31dp"
                        android:layout_marginLeft="13dp"
                        >

                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/seeds"
                app:cardElevation="20dp"
                app:cardCornerRadius="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/canva_home"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="42dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/seed" />




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:text="Seeds"
                        android:fontFamily="@font/alice"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="33dp"
                        android:layout_marginTop="37dp"
                        android:layout_marginLeft="19dp"
                        >

                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </ScrollView>
</FrameLayout>